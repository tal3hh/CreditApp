@model AppUser
@{
    ViewBag.Navbar = Model.Name + " adli musteri melumatlari";
}
<br />
<br />
<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Musateri melumati</h4>
                <form class="forms-sample">
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Ad: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Name
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Soyad: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Surname
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Fathername" class="col-sm-3 col-form-label">Ata Adi: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Fathername
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Dogum tarixi: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Date.ToString("dd MMM yyyy")
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Yasayis yeri: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Location
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">FIN: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.FIN
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Seria: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Seria
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Qeydiyyat yeri: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.RegisAdress
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Mobil: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Mobil
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 col-form-label">Ev nom: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.HomeNum
                            </p>
                        </div>
                    </div>
                    <br />
                    <hr />
                    <br />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-light">Geri</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card" >
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Fəaliyyət sekt.</h4>
                @if(Model.Work == null)
                {
                    <div class="form-group row">
                        <div class="col-sm-9">
                            <p class="form-control">
                                "@Model.Name" adli musterinin Fəaliyyət sektoru melumatlari daxil edilmeyib.
                                Elave etmek ucun linke kecid edin. <a asp-action="WorkAdd" asp-controller="Home" asp-route-id="@Model.Id">Fəaliyyət sektoru yarat</a>
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <form class="forms-sample">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Sektor: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Work?.WorkName
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label a class="col-sm-3 col-form-label">Ayliq gelir: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Work?.Salary azn
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label  class="col-sm-3 col-form-label">Tecrube: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Work?.ExpYear il, @Model.Work?.ExpMonth ay
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label  class="col-sm-3 col-form-label">Region: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Work?.Region
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label  class="col-sm-3 col-form-label">Biznes unvani: </label>
                        <div class="col-sm-9">
                            <p class="form-control">
                                @Model.Work?.Adress
                            </p>
                        </div>
                    </div>
                </form>
                }
            </div>
        </div>
    </div>
</div>